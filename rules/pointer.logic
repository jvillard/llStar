/**********************************************
 * Generally useful rules about getelementptr 
 *************************************/

/* the size of the array doesn't matter for jumping
 * (moreover, ?n here might be a size given by LLVM's type system, which
 *  doesn't keep track of array's sizes unless they are constant)
 * and the rules are the same for arrays and pointers
 * so we might as well care only about pointers
 */
rewrite eltptr_array:
  eltptr(?p,array_type(?n, ?t),?j)
  = eltptr(?p,pointer_type(?t),?j)

rewrite jump_end:
  eltptr(?y,?t,jump_end()) = ?y

rewrite pointer_getelementptr0:
  eltptr(?p,pointer_type(?t),jump(bv_const("64", "0"),?j))
  = eltptr(?p,?t,?j)

rewrite pointer_getelementptr1:
  eltptr(?x,pointer_type(?t),jump(bv_const("64", "1"),?j))
  = eltptr(bvadd.64(?x,sizeof(?t)),?t,?j)

rewrite pointer_getelementptr_any:
  eltptr(?x,pointer_type(?t),jump(?n,?j))
  = eltptr(bvadd.64(?x,bvmul.64(?n,sizeof(?t))),?t,?j)


/*************************************
 * Simple subtraction rules 
 *************************************/

rule ptr_same_root_same_type:
 | pointer(?x,?t,?v) |- pointer(?x,?t,?w)
without
 ?w != ?v
if
 pointer(?x,?t,?v) | |- ?w = ?v

